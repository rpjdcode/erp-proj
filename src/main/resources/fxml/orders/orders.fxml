<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="view" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <SplitPane fx:id="ordersSplitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <VBox fx:id="ordersSplitViewUp" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                     <items>
                        <VBox fx:id="ordersUpLeftColumnBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <children>
                              <ListView fx:id="ordersList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                              <HBox fx:id="ordersButtonsBox" alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Button fx:id="addOrderButton" mnemonicParsing="false" onAction="#onAddOrderAction" text="%app.lang.orders.list.button.add" />
                                    <Button fx:id="modifyOrderButton" mnemonicParsing="false" onAction="#onProcessOrderAction" text="%app.lang.orders.list.button.pro" />
                                    <Button fx:id="deleteOrderButton" mnemonicParsing="false" onAction="#onDeleteOrderAction" text="%app.lang.orders.list.button.del" />
                                 </children>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox fx:id="ordersUpRightColumnBox" />
                     </items>
                  </SplitPane>
               </children>
            </VBox>
            <VBox fx:id="ordersSplitViewDown" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
         </items>
      </SplitPane>
   </children>
</VBox>
