<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="view" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="typesTable" prefHeight="200.0" prefWidth="200.0">
         <columns>
            <TableColumn fx:id="typeIdColumn" prefWidth="75.0" text="%app.lang.products.types.management.table.id" />
            <TableColumn fx:id="typeCodeColumn" prefWidth="75.0" text="%app.lang.products.types.management.table.code" />
            <TableColumn fx:id="typeNameColumn" prefWidth="75.0" text="%app.lang.products.types.management.table.name" />
            <TableColumn fx:id="typeCreatedColumn" prefWidth="75.0" text="%app.lang.products.types.management.table.created" />
            <TableColumn fx:id="typeUpdatedColumn" prefWidth="75.0" text="%app.lang.products.types.management.table.updated" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddAction" text="%app.operation.add" />
            <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#onModifyAction" text="%app.operation.modify" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteAction" text="%app.operation.delete" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
